{
  "compileOnSave": true,
  "compilerOptions": {
    "incremental": true,
    "experimentalDecorators": true,
    "pretty": false,
    "module": "commonjs",
    "target": "esnext",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "*": [
        "node_modules/*",
        "src/types/*",
        "*"
      ]
    },
    "alwaysStrict": true
  },
  "include": [
    "src/**/*"
  ]
}
